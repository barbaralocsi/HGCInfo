            </intent-filter>
        </activity>
        <activity android:name=".ui.teamdetails.TeamDetailsActivity"></activity>

        <meta-data android:name="DATABASE" android:value="hgcinfo.db" />
        <meta-data android:name="VERSION" android:value="6" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="hu.bme.aut.hgcinfo" />
